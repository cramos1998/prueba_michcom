<style>
    /* Estilo para el modal */
    .modal {
        display: none;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: white;
        width: 100%;
        height: 200px;
        max-width: 500px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        z-index: 1000;
    }

    /* Estilo para el botón de cierre del modal */
    .close {
        position: absolute;
        top: 10px;
        right: 10px;
        cursor: pointer;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1>Lista de usuarios</h1>
        </div>
    </div>
</div>
<div class="container">
    <table id="example" class="display" width="100%">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Scope</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

<div id="editUserModal" class="modal">
    <div class="modal-content">
        <span id="closeModal" class="close">&times;</span>
        <h2>Editar Usuario</h2>
        <form>
            <label for="userName">Nombre:</label>
            <input type="text" id="userName">
            <label for="userEmail">Email:</label>
            <input type="text" id="userEmail">
            <button id="saveChanges">Guardar Cambios</button>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        // Configuración de la tabla DataTable
        $('#example').DataTable({
            "ajax": {
                "url": "http://localhost:3000/get-users",
                "dataSrc": ""
            },
            "columns": [
                { "data": "name" },
                { "data": "lastname" },
                { "data": "email" },
                { "data": "scope" },
                { "data": "status" },
                {
                    "data": "id",
                    "render": function (data, type, row, meta) {
                        const userData = JSON.stringify(row);
                        return '<button class="btn btn-primary edit-user" data-user=\'' + userData + '\'>Editar</button>';
                    }
                },
                { "data": "id",
                    "render": function (data, type, row, meta) {
                        const userData = JSON.stringify(row);
                        return '<button class="btn btn-danger delete-user" data-user=\'' + userData + '\'>Eliminar</button>';
                    }
                }
            ]
        });

        // Manejo de eventos para abrir el modal
        $('#example tbody').on('click', '.edit-user', function () {
            const user = JSON.parse($(this).attr('data-user'));
            console.log(user);
            $('#userName').val(user.name);
            $('#userEmail').val(user.email);
            $('#editUserModal').css('display', 'block');
        });

        // Manejo del botón de cierre del modal
        $('#closeModal').on('click', function () {
            $('#editUserModal').css('display', 'none');
        });

        // Manejo del cierre del modal al hacer clic fuera de él
        $(window).on('click', function (e) {
            if (e.target == $('#editUserModal')[0]) {
                $('#editUserModal').css('display', 'none');
            }
        });

        // Agregar aquí el manejo de eventos para guardar los cambios del usuario
        $('#saveChanges').on('click', function () {
            $('#editUserModal').css('display', 'none');
        });

        $('#example tbody').on('click', '.delete-user', function () {
            const user = JSON.parse($(this).attr('data-user'));
            $.ajax({
                url:`http://localhost:3000/users/${user.id}`,
                method: 'POST',
                data: {
                    id: user.id
                },
                success: function (response) {
                    console.log(response);
                    window.location.reload();
                },
                error: function (error) {
                    console.log(error);
                }
            });
        });
    });
</script>